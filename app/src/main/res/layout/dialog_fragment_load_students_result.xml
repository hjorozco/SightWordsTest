<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/application_large_margin"
        android:layout_marginEnd="@dimen/application_medium_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/application_large_padding">

        <TextView
            android:id="@+id/dialog_fragment_load_students_result_max_number_of_students_reached_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/application_medium_margin"
            android:layout_marginBottom="@dimen/application_large_margin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/application_text_size"
            android:visibility="gone"
            tools:text="You have reached the maximum number of students in your classroom (100 students)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/application_medium_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_fragment_load_students_result_loaded_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/application_standard_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/application_text_size"
                    tools:text="9999 students loaded" />

                <TextView
                    android:id="@+id/dialog_fragment_load_students_result_not_loaded_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/application_text_size"
                    tools:text="9999 students not loaded" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/application_large_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dialog_fragment_load_students_result_loaded_info_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/information_image_view_content_description"
                    app:srcCompat="@drawable/ic_info_outline_color_primary_24dp" />

                <ImageView
                    android:id="@+id/dialog_fragment_load_students_result_not_loaded_info_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_fragment_load_students_results_not_loaded_info_image_view_top_margin"
                    android:contentDescription="@string/information_image_view_content_description"
                    app:srcCompat="@drawable/ic_info_outline_color_primary_24dp" />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/dialog_fragment_load_students_result_check_box"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/application_standard_margin"
            android:layout_marginTop="@dimen/application_large_margin"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/application_small_text_size"
            android:textStyle="italic"
            android:text="@string/dialog_fragment_load_students_result_check_box_text"/>

    </LinearLayout>

</ScrollView>