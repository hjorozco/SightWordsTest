<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/application_large_padding">

        <TextView
            android:id="@+id/dialog_fragment_delete_oldest_student_results_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/application_medium_margin"
            android:layout_marginTop="@dimen/application_large_margin"
            android:layout_marginEnd="@dimen/application_medium_margin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/application_text_size"
            tools:text="Please enter the number of oldest tests to delete from Hector Orozco:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/application_medium_margin"
            android:layout_marginEnd="@dimen/application_medium_margin"
            tools:ignore="UseCompoundDrawables">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/dialog_fragment_delete_oldest_student_results_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/application_standard_margin"
                android:gravity="start"
                android:inputType="number"
                android:maxLength="@integer/maximum_number_of_chars_on_delete_oldest_tests_edit_text"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/application_text_size"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/dialog_fragment_delete_oldest_student_results_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_fragment_load_students_notification_info_image_margin_start"
                android:layout_marginTop="@dimen/application_standard_margin"
                android:contentDescription="@string/information_image_view_content_description"
                android:paddingTop="@dimen/application_small_padding"
                app:srcCompat="@drawable/ic_info_outline_color_primary_24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>